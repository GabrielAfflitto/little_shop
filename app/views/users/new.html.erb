<%= form_for @user do |f| %>

  <%= f.label :full_name %>
  <%= f.text_field :full_name %>

  <%= f.label :username %>
  <%= f.text_field :username %>

  <%= f.label :password %>
  <%= f.password_field :password %>

  <%= f.label :address %>
  <%= f.text_field :address %>

  <%= f.label :state %>
  <%= f.select :state, us_states %>

  <%= f.submit "Sign up" %>
<% end %>
