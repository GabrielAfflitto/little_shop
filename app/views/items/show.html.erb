<div id="item-container">
  <h1><%=@item.name%></h1>
  <div id="item-block">
    <%= image_tag(@item.image,  id: "item-show-image") %>
    <p id="item-description"><%= @item.description %></p>
    <div id="price-button-pair">
        <%= number_to_currency(@item.price) %>
        <% if @item.status == "active" %>
          <%= button_to "Add To Cart", cart_path(item_id: @item.id) %>
        <% elsif @item.status == "retired" %>
          <p class="retired-button">Item Retired</p>
        <%end%>
    </div>
  </div>
</div>
