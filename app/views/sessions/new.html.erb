<div class="column-flexbox">
  <%= form_tag({}, {:id => "new-account-form"}) do %>
    <h3>LOGIN</h3>
    <%= label_tag :username %>
    <%= text_field_tag :username %>
    <%= label_tag :password %>
    <%= password_field_tag :password %>
    <%= submit_tag "Submit", class: "submit-button" %>
  <% end %>

  <div class="new-user-box">
    <h3>NEW USER?</h3>
    <p class="create-account-link"><%= link_to "Create Account", new_user_path %></p>
  </div>
</div>
