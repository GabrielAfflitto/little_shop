<!DOCTYPE html>
<html>
  <head>
    <title>LittleShop</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
  </head>

  <div class="nav_bar">
    <div>
      <h1 class="title">Grievous' Lightsaber Emporium</h1>
    </div>
    <div class="nav_icons">
      <% if current_user.nil? %>
        <a href="/items"> <img src="https://d30y9cdsu7xlg0.cloudfront.net/png/957347-200.png" class="invert" id="saber"></a>
        <a href="/" class: "nav_bar_link"><i class="fa fa-home fa-2x" id="nav_bar_link" aria-hidden="true"></i></a>
        <a href="/cart" class: "nav_bar_link"><i class="fa fa-shopping-cart fa-2x" id="nav_bar_link" aria-hidden="true"></i></a>
        <a href="/login" class: "nav_bar_link" title="Login"><i class="fa fa-user-circle-o fa-2x" id="nav_bar_link" aria-hidden="true"></i></a>
      <% elsif current_user %>
        <h5>Logged in as <%= current_user.username %></h5>
        <a href="/items"> <img src="https://d30y9cdsu7xlg0.cloudfront.net/png/957347-200.png" class="invert" id="saber"></a>
        <a href="/dashboard" class: "nav_bar_link"><i class="fa fa-desktop fa-2x" id="nav_bar_link" aria-hidden="true"></i></a>
        <a href="/" class: "nav_bar_link"><i class="fa fa-home fa-2x" id="nav_bar_link" aria-hidden="true"></i></a>
        <a href="/cart" class: "nav_bar_link"><i class="fa fa-shopping-cart fa-2x" id="nav_bar_link" aria-hidden="true"></i></a>
        <a href="/logout" class: "nav_bar_link"><i class="fa fa-sign-out fa-2x" id="nav_bar_link" aria-hidden="true"></i></i></a>
      <% end %>
    </div>
  </div>
  <body>
    <% flash.each do |type, message| %>
      <%= content_tag :div, message.html_safe, class: type %>
    <% end %>

    <%= yield %>
  </body>
</html>
