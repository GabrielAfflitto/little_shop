<div class="column-flexbox">
  <%= form_for [:admin, @item], html: {id: "create-item-form"} do |f| %>
<h3>Edit Item</h3>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :description %>
  <%= f.text_field :description %>
  <%= f.label :price %>
  <%= f.number_field :price %>
  <%= f.label :image, "Image URL"%>
  <%= f.text_field :image %>
  <%= f.label :category_id %>
  <%= f.select :category_id, @categories.collect {|category| category.name} %>
  <br>
  <div>
    <%= f.radio_button :status, 'active' %>
    <%= f.label :status, 'Active' %>
    <%= f.radio_button :status, 'retired' %>
    <%= f.label :status, 'Retired' %>
  </div>
  <%= f.submit "Update Item" %>
<% end %>
</div>
